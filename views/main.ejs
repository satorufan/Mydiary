<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@100..900&display=swap" rel="stylesheet">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link href="main.css" rel="stylesheet"/>
        <title>My Diary</title>
    </head>
    <body>
        <div class="main">
            <h1></h1>
            <h1 class="header"> <%= userSession.nn %>'s Diary </h1><br/>
            <h1></h1>
        </div>

        <!-- 글 추가 -->
        <div class="modal fade" id="add_elem" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">글 작성</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="container mt-4">
                            <form action="/main" method="POST">
                                <fieldset>
                                    <div class="md-3">
                                        <label for="Modal-Title" class="form-label">제목</label>
                                        <input type="text" id="Modal-Title" class="form-control" name="Modal_Title">
                                    </div>
                                    <div class="md-3" id="md-3-content">
                                        <label for="Modal-Content" class="form-label">내용</label>
                                        <textarea id="Modal-Content" class="form-control" name="Modal_Content"></textarea>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancle</button>
                                        <button id="upload" type="button" class="btn btn-primary">Upload</button>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 글 수정 -->
        <div class="modal fade" id="add_elem" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">글 작성</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="container mt-4">
                            <form action="/main" method="POST">
                                <fieldset>
                                    <div class="md-3">
                                        <label for="Modal-Title" class="form-label">제목</label>
                                        <input type="text" id="Modal-Title" class="form-control" name="Modal_Title">
                                    </div>
                                    <div class="md-3" id="md-3-content">
                                        <label for="Modal-Content" class="form-label">내용</label>
                                        <textarea id="Modal-Content" class="form-control" name="Modal_Content"></textarea>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancle</button>
                                        <button id="upload" type="button" class="btn btn-primary">Upload</button>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        


        <!----------글 리스트------------->
        <div class="content">
            <div></div>
            <div class="detail">
                <% for (var i = post.length-1; i >= 0 ; i--){ %>
                    <div class="content_elem">
                        <div id="content-elem-date" align="center" class="content-elem-date"><%= post[i].date %></div>
                        <div class="content-elem-title"><%= post[i].title %></div>
                        <button id="content-elem-edit" type="button" class="btn btn-light">수정</button>
                        <button method="POST" id="content-elem-delete" type="button" class="btn btn-light" onclick = deletepost("<%= post[i]._id %>")>삭제</button>
                    </div>
                <% } %>
                <button id="add" type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#add_elem">+</button>
            </div>
            <div></div>
        </div>

        <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
        </script>
        <script>
            // 글 추가 트리거
            $("#upload").click(()=>{
                const title = $("#Modal-Title").val()
                const content = $("#Modal-Content").val()
                const today = new Date()
                let month = today.getMonth().toString()
                let day = today.getDay().toString()
                
                if (month.length == 1){
                    month = "0" + today.getMonth().toString()
                }
                if (day.length == 1){
                    day = "0" + today.getDay().toString()
                }
                
                const date = today.getFullYear() + "/" + month + "/" + day

                $.ajax({
                    url: "/diary/main",
                    method: "POST",
                    data: {
                        title: title,
                        content: content,
                        date: date
                    },
                }).done((result)=>{
                    if (result.code == 1){
                        alert("업로드 하였습니다.")
                        $("#Modal-Title").val("")
                        $("#Modal-Content").val("")
                        $("#add_elem").modal("hide")
                        location.reload(true)
                    }
                })
            })


            //글 삭제
            function deletepost (dataid) {
                if (confirm("정말 삭제하시겠습니까?")){
                    const _id = dataid
                    $.ajax({
                    url: "/diary/main",
                    method: "POST",
                    data: {
                        _id: _id,
                        code: 2
                    }}).done((result)=>{
                        if (result.code == 2){
                            alert("다시 로그인 해주세요.")
                            location.reload()
                        } else {
                            alert("삭제 하였습니다.")
                            location.reload()
                        }
                    })
                }
            }

        </script>
    </body>
</html>